{
  "permissions": {
    "allow": [
      "Shell(mvn compile*)",
      "Shell(mvn test*)",
      "Shell(mvn verify*)",
      "Shell(mvn spotless:check*)",
      "Shell(mvn quarkus:dev*)",
      "Shell(find *)",
      "Shell(grep *)"
